%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-inputs
    .input
      = f.label :email
      = render RubyUI::Input.new(type: :email,
                                 reqired: true,
                                 autofocus: true,
                                 name: "user[email]",
                                 input_html: { autocomplete: "email" })
      = render partial: "/shared/field_error", locals: { instance: @user, field: "password" }
    .input
      = f.label :password
      = render RubyUI::Input.new(type: :password,
                                 required: true,
                                 name: "user[password]",
                                 hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                 input_html: { autocomplete: "new_password" })
      = render partial: "/shared/field_error", locals: { instance: @user, field: "password" }
    .input
      = f.label :password_confirmation
      = render RubyUI::Input.new(type: :password,
                                 required: true,
                                 name: "user[password_confirmation]",
                                 input_html: { autocomplete: "new_password" })
      = render partial: "/shared/field_error", locals: { instance: @user, field: "password_confirmation" }
  .form-actions
    = f.button :submit, "Sign up"
- if controller_name != 'sessions'
  = link_to "Log in", new_session_path(resource_name)
  %br/
