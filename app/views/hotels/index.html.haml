.search-filters
  = render RubyUI::Form.new(action: search_hotels_path, method: :get, class: "flex") do
    = render RubyUI::FormField do
      = render RubyUI::Select.new(name: "search[city]") do
        = render RubyUI::FormFieldLabel.new(value: "City")
        = render RubyUI::SelectTrigger do
          = render RubyUI::SelectValue.new(placeholder: "Select a city")
        = render RubyUI::SelectContent do
          = render RubyUI::SelectGroup do
            - @cities.each do |city|
              = render RubyUI::SelectItem.new(value: city) do
                = city
    = render RubyUI::FormField.new(class: "space-y-4") do
      = render RubyUI::Input.new(type: "string",
                                 name: "search[arrival_date]",
                                 placeholder: "Select the arrival date",
                                 id: "arrival-date",
                                 data: {controller: "ruby-ui--calendar-input"})
      = render RubyUI::Calendar.new(input_id: "#arrival-date")
    = render RubyUI::FormField.new(class: "space-y-4") do
      = render RubyUI::Input.new(type: "string",
                                 name: "search[depature_date]",
                                 placeholder: "Select the departure date",
                                 id: "depature-date",
                                 data: {controller: "ruby-ui--calendar-input"})
      = render RubyUI::Calendar.new(input_id: "#depature-date")
    = render RubyUI::FormField do
      = render RubyUI::FormFieldLabel.new { "Max price" }
      = render RubyUI::Input.new(type: "number", name: "search[max_price]")
    = render RubyUI::Button.new(variant: :primary,
                                type: :submit,
                                name: "commit") do
      %span Search
